<resources>

    <!-- Base application theme. -->
    <style name="AppThemeNoBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>


    <style name="ToolBar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="android:focusable">false</item>
        <item name="contentInsetRight">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="android:padding">0dp</item>
    </style>


    <style name="SingleLinePrimaryMediumText" parent="android:TextAppearance">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:state_activated">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="SingleLineSecondaryMediumText" parent="android:TextAppearance">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:state_activated">true</item>
        <item name="android:textColor">#606060</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="SingleLinePrimaryText" parent="android:TextAppearance">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:state_activated">true</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SingleLineSecondaryText" parent="android:TextAppearance">
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:state_activated">true</item>
        <item name="android:textColor">#606060</item>
    </style>

</resources>
